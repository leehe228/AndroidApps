<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

    <ImageView
            android:id="@+id/List_ImageView_main"
            android:layout_width="55dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="#EDEDED"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/List_LinearLayout_main" />

    <LinearLayout
            android:id="@+id/List_LinearLayout_main"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingEnd="15dp"
            android:paddingBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/List_ImageView_main"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/List_TextView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumr"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="20dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/List_TextView_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumr"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>