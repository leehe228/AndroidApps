<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".StudyingActivity">

    <TextView
        android:id="@+id/Studying_TextView_statement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textColor="#424242"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/Studying_TextView_Alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textColor="#424242"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@id/Studying_LinearLayout_info"
        tools:ignore="SpUsage" />

    <LinearLayout
        android:id="@+id/Studying_LinearLayout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/basic_button_darkgray"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@id/Studying_Button_PhoneMode">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Studying_TextView_totalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareb"
                android:textColor="#424242"
                android:textSize="20dp"
                tools:ignore="SpUsage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Studying_total"
                android:textColor="#424242"
                android:textSize="12dp"
                tools:ignore="SpUsage" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#424242" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Studying_TextView_subTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareb"
                android:textColor="#424242"
                android:textSize="20dp"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/Studying_TextView_subName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#424242"
                android:textSize="12dp"
                tools:ignore="SpUsage" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/Studying_Button_PhoneMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/basic_button_darkgray"
        android:fontFamily="@font/nanumsquareb"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:stateListAnimator="@null"
        android:text="@string/Studying_phone"
        android:textAlignment="textStart"
        android:textColor="#424242"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/Studying_Button_PauseStudy"
        tools:ignore="SpUsage" />

    <Button
        android:id="@+id/Studying_Button_PauseStudy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/basic_button_darkgray"
        android:fontFamily="@font/nanumsquareb"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:stateListAnimator="@null"
        android:text="@string/Studying_pause"
        android:textAlignment="textStart"
        android:textColor="#424242"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/Studying_Button_FinishStudy"
        tools:ignore="SpUsage" />

    <Button
        android:id="@+id/Studying_Button_FinishStudy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/basic_button_darkgray"
        android:fontFamily="@font/nanumsquareb"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:stateListAnimator="@null"
        android:text="@string/Studying_finish"
        android:textAlignment="textStart"
        android:textColor="#424242"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="SpUsage" />

</androidx.constraintlayout.widget.ConstraintLayout>