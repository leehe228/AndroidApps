<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".SearchActivity">

    <LinearLayout
        android:id="@+id/Search_LinearLayout_Bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Search_TextView_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nanumsquareeb"
                android:textColor="@color/black"
                android:textSize="28dp"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/Search_TextView_info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquarer"
                android:text="@string/Search_info1"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="14dp"
                tools:ignore="SpUsage" />

        </LinearLayout>

        <EditText
            android:id="@+id/Search_EditText_place"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_shape"
            android:fontFamily="@font/nanumsquarer"
            android:inputType="text"
            android:lines="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18dp"
            tools:ignore="Autofill,LabelFor,SpUsage" />

        <ListView
            android:id="@+id/Search_ListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_shape"
            android:paddingStart="15dp"
            android:paddingEnd="15dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/Search_TextView_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquarer"
        android:text="@string/Search_warn1"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage" />

</androidx.constraintlayout.widget.ConstraintLayout>